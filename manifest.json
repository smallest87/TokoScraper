{
  "manifest_version": 3,
  "name": "Tokopedia Sidepanel Scraper",
  "version": "1.0",
  "description": "Scrape data produk Tokopedia (Harga, Rating, Toko, Badge) secara manual via Side Panel.",
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "permissions": [
    "sidePanel",
    "scripting",
    "activeTab",
    "tabs"
  ],
  "host_permissions": [
    "https://www.tokopedia.com/*"
  ],
  "action": {
    "default_title": "Buka TokoScraper",
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "background": {
    "service_worker": "background.js"
  }
}